

:root {
  
  --color-bg-primary: #0a0a0f;
  --color-bg-secondary: #12121a;
  --color-bg-tertiary: #1a1a28;
  --color-bg-card: rgba(26, 26, 40, 0.6);
  --color-bg-card-hover: rgba(26, 26, 40, 0.9);

  
  --color-text-primary: #f8f8ff;
  --color-text-secondary: #e8e8f0;
  --color-text-muted: #b8b8c8;
  --color-text-accent: #d8d8e8;

  
  --color-accent-primary: #6366f1;
  --color-accent-secondary: #8b5cf6;
  --color-accent-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  --color-accent-glow: rgba(99, 102, 241, 0.3);

  
  --color-border: rgba(248, 248, 255, 0.1);
  --color-border-hover: rgba(248, 248, 255, 0.2);

  
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.4);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.5);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.6);
  --shadow-glow: 0 0 20px var(--color-accent-glow);

  
  --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-display: 'Outfit', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;

  
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 0.75rem;
  --spacing-lg: 1rem;
  --spacing-xl: 1.5rem;
  --spacing-2xl: 2rem;

  
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 24px;
  --radius-full: 9999px;

  
  --transition-fast: 150ms ease-in-out;
  --transition-base: 250ms ease-in-out;
  --transition-slow: 400ms ease-in-out;
}



* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-primary);
  background-color: var(--color-bg-primary);
  color: var(--color-text-primary);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}



.app {
  min-height: 100vh;
  position: relative;
}

.app::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background:
    radial-gradient(circle at 20% 20%, rgba(99, 102, 241, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.08) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

.container {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  position: relative;
  z-index: 1;
}



.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(10, 10, 15, 0.8);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid var(--color-border);
  padding: var(--spacing-md) 0;
  z-index: 100;
  transition: all var(--transition-base);
}

.header.scrolled {
  background: rgba(10, 10, 15, 0.95);
  box-shadow: var(--shadow-md);
}

.nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-centered {
  justify-content: center;
}

.logo {
  font-family: var(--font-display);
  font-size: 1.5rem;
  font-weight: 700;
  background: var(--color-accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
}

.nav-links {
  display: flex;
  gap: var(--spacing-lg);
  list-style: none;
}

.nav-link {
  color: var(--color-text-secondary);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.95rem;
  position: relative;
  transition: color var(--transition-fast);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--color-accent-gradient);
  transition: width var(--transition-base);
}

.nav-link:hover {
  color: var(--color-text-primary);
}

.nav-link:hover::after {
  width: 100%;
}



.section {
  padding: var(--spacing-xl) 0;

  .hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-2xl);
  }

  .hero-text {
    flex: 1;
    text-align: left;
  }

  .avatar-container {
    flex-shrink: 0;
    position: relative;
  }

  .avatar {
    width: 180px;
    height: 180px;
    border-radius: var(--radius-full);
    border: 4px solid var(--color-bg-primary);
    box-shadow: var(--shadow-md);
    object-fit: cover;
    position: relative;
    z-index: 2;
  }

  .avatar-container::before {
    content: '';
    position: absolute;
    top: -6px;
    left: -6px;
    right: -6px;
    bottom: -6px;
    background: var(--color-bg-secondary);
    border-radius: var(--radius-full);
    z-index: 1;
  }

  .hero-greeting {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-xs);
    font-weight: 400;
  }

  .hero-name {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    color: var(--color-text-primary);
    letter-spacing: -0.02em;
  }

  .hero-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .hero-title {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 0;
    font-weight: 500;
  }

  .hero-location {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  .location-icon {
    width: 16px;
    height: 16px;
    color: var(--color-accent-primary);
  }

  .open-to-work {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: var(--radius-full);
    color: #22c55e;
    font-size: 0.9rem;
    font-weight: 500;
    width: fit-content;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {

    0%,
    100% {
      opacity: 1;
    }

    50% {
      opacity: 0.5;
    }
  }

  .hero-description {
    max-width: 550px;
    margin: 0;
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    text-align: justify;
  }

  

  .card {
    background: var(--color-bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-md) var(--spacing-lg);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--color-accent-gradient);
    transform: scaleX(0);
    transition: transform var(--transition-base);
  }

  .card:hover {
    background: var(--color-bg-card-hover);
    border-color: var(--color-border-hover);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .card:hover::before {
    transform: scaleX(1);
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-primary);
  }

  .card-subtitle {
    color: var(--color-accent-primary);
    font-weight: 500;
    margin-bottom: var(--spacing-xs);
  }

  .card-date {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-sm);
  }

  .card-description {
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  

  .about-content {
    width: 100%;
  }

  .about-text {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-sm);
    text-align: justify;
  }

  

  .timeline {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .timeline-item {
    position: relative;
    padding-left: var(--spacing-xl);
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }

  .timeline-item::after {
    content: '';
    position: absolute;
    left: -6px;
    top: 8px;
    width: 14px;
    height: 14px;
    border-radius: var(--radius-full);
    background: var(--color-accent-gradient);
    box-shadow: var(--shadow-glow);
  }

  

  .skill-category {
    margin-bottom: var(--spacing-xl);
  }

  .skill-category:last-child {
    margin-bottom: 0;
  }

  .skill-category-title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    width: 100%;
    margin: 0;
    justify-content: flex-start;
  }

  .skill-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(10px);
    border: 1px solid var(--color-border);
    border-radius: 50px;
    padding: 0.4rem 0.75rem;
    transition: all var(--transition-base);
    cursor: pointer;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .skill-card:hover {
    background: var(--color-bg-card-hover);
    border-color: var(--color-border-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow), var(--shadow-lg);
  }

  .skill-icon {
    width: 24px;
    height: 24px;
    transition: transform var(--transition-base);
    display: block;
    flex-shrink: 0;
  }

  .skill-card:hover .skill-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .skill-name {
    font-weight: 600;
    color: var(--color-text-primary);
    font-size: 0.85rem;
    margin: 0;
    white-space: nowrap;
  }

  

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-lg);
    width: 100%;
  }

  .project-card ul {
    list-style: none;
    margin-top: var(--spacing-sm);
  }

  .project-card li {
    color: var(--color-text-secondary);
    padding-left: var(--spacing-md);
    position: relative;
    margin-bottom: var(--spacing-xs);
  }

  .project-card li::before {
    content: 'â–¹';
    position: absolute;
    left: 0;
    color: var(--color-accent-primary);
    font-weight: bold;
  }

  

  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      text-align: center;
    }

    .hero-text {
      text-align: center;
    }

    .hero-description {
      margin: 0 auto;
    }

    .hero-name {
      font-size: 2rem;
    }

    .hero-title {
      font-size: 1.15rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .nav-links {
      gap: var(--spacing-md);
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .section {
      min-height: auto;
      padding: var(--spacing-lg) 0;
    }
  }

  @media (max-width: 480px) {
    .hero-name {
      font-size: 1.75rem;
    }

    .avatar {
      width: 140px;
      height: 140px;
    }

    .container {
      padding: 0 var(--spacing-md);
    }
  }

  

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  
  .fade-in-up:nth-child(1) {
    animation-delay: 0.1s;
  }

  .fade-in-up:nth-child(2) {
    animation-delay: 0.2s;
  }

  .fade-in-up:nth-child(3) {
    animation-delay: 0.3s;
  }

  .fade-in-up:nth-child(4) {
    animation-delay: 0.4s;
  }

  .fade-in-up:nth-child(5) {
    animation-delay: 0.5s;
  }

  .fade-in-up:nth-child(6) {
    animation-delay: 0.6s;
  }
